{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A React boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "clean": "rimraf dist node_modules",
    "reset": "npm run clean && npm install && npm run build && npm run start",
    "start": "node ./dist/server.js",
    "test": "jest ./src",
    "dev": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajdelossantos/react-boilerplate.git"
  },
  "keywords": [
    "Node",
    "React"
  ],
  "author": "Alvin James T. Delos Santos",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ajdelossantos/react-boilerplate/issues"
  },
  "homepage": "https://github.com/ajdelossantos/react-boilerplate#readme",
  "dependencies": {
    "eslint": "^4.19.1",
    "express": "^4.16.3",
    "normalize.css": "^8.0.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.2",
    "rimraf": "^2.6.2",
    "webpack": "^4.10.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.4.0",
    "style-loader": "^0.21.0",
    "webpack-cli": "^2.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/enzyme.setup.js",
    "setupFiles": [
      "raf/polyfill"
    ]
  }
}